<div class = 'row justify-content-center'>
  <div class = 'col-7'>
  <h2>Sign up</h2>
  
  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render 'users/shared/error_messages', resource: resource %>

    <div class = 'form-group row'>
      <%= f.label :name, "名前", class: 'col-5' %>

      <div class = 'col-7'>
        <%=
          f.text_field :name,
          class: 'form-control',
          autofocus: 'true',
          required: '',
          autocomplete: 'name',
          placeholder: 'ユーザー1'
        %>
      </div>
    </div>

    <div class = 'form-group row'>
      <%= f.label :email, "メールアドレス", class: 'col-5' %>

      <div class = 'col-7'>
        <%=
          f.email_field :email,
          class: 'form-control',
          autofocus: 'true',
          required: '',
          autocomplete: 'email',
          placeholder: "メールアドレス"
        %>
      </div>
    </div>

    <div class = 'form-group row'>
      <div class = 'col-5'>
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </div>
      <div class = 'col-7'>
        <%=
          f.password_field :password,
          class: 'form-control',
          autofocus: 'true',
          required: '',
          placeholder: 'password'
        %>
      </div>
    </div>

    <div class = 'form-group row'>
      <%= f.label :password_confirmation, "パスワード確認", class: 'col-5' %>

      <div class = 'col-7'>
        <%=
          f.password_field :password,
          class: 'form-control',
          autofocus: 'true',
          required: '',
          placeholder: 'password'
        %>
      </div>
    </div>

    <div class = 'form-group text-center'>
      <%= f.submit 'Sign up', class: 'btn' %>
    </div>
  <% end %>

  <hr>
  
  <div class = 'form-group text-center'>
    <%= render 'users/shared/links' %>
  </div>

</div>